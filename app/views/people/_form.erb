
<form  action="<%= people_form_action(@person)%>" method="post"  id="<% people_form_id(@person)%>" class = "people_form_class(@person) %> col-sm-4">
	<input type="hidden" name="_method" value = "<%= people_form_method(@person) %>" />

	<div class="form-group">
	    <label for="first_name">First Name:</label>
	    <input class='form-control' type="text" name="first_name" value = "<%= @person.first_name %>" />
	</div>
	<div>		  
	    <label for="last_name">Last Name:</label>  
	    <input class='form-control' type="text" name="last_name" value ="<%= @person.last_name %> "/>
	</div>
	<div>		  
	    <label for="birthdate">Birthdate:</label>  
	    <input class='form-control' name="birthdate" type="date" value = "<%= @birthdate_to_default %>"/>
	</div>
	<div><font color="red"> 
		<%= if @error != nil
				@error
			end %></font>
	</div>
	<br>
	<div>
		<input class="btn btn-info" type="Submit" />

	</div>
</form>

<form action = "<%= "/people" %> " method = "get">
    <input type="submit" class="btn btn-default  pull-right" value = "Cancel"/>
</form>

